<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProfileFragment"
    android:background="#F19478">

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAIL"
        android:textStyle="bold"
        android:textSize="30sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvParam"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5"
        />

    <TextView
        android:id="@+id/tvParam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textSize="16sp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/detail"
        app:layout_constraintEnd_toEndOf="@+id/detail"
        />

    <TextView
        android:id="@+id/tvParamSafeArgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test2"
        android:textSize="16sp"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@+id/tvParam"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@+id/detail"
        app:layout_constraintEnd_toEndOf="@+id/detail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>