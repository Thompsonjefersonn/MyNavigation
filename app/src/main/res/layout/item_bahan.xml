<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_bahan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/gambar_bahan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nama_bahan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bahan"
        app:layout_constraintEnd_toStartOf="@+id/iv_cart"
        app:layout_constraintStart_toEndOf="@+id/iv_bahan"
        app:layout_constraintTop_toTopOf="@+id/iv_bahan"
        tools:text="Nama Bahan" />

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/tambah_ke_keranjang"
        android:src="@drawable/ic_shopping_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
